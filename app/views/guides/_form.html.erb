<%= form_with(model: guide, local: true) do |form| %>
  <% if guide.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(guide.errors.count, "error") %> prohibited this guide from being saved:</h2>

      <ul>
      <% guide.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, Guide.statuses.keys.map{|x| [x.humanize, x]} %>
  </div>
  <div class="field">
  <%= form.label :cover_image %>
  <%= form.file_field :cover_image, direct_upload: true %>
  </div>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, class: "tinymce", cols: 20, rows: 40 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<%= render 'layouts/tinymce' %>